<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar" />

    <style name="TextAppearanceMonospace" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="SimpleSpinnerItem" parent="TextAppearance.AppCompat.Menu" />

    <style name="SimpleSpinnerDropdownItem" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textColor">?android:attr/textColorPrimaryDisableOnly</item>
    </style>

    <style name="SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
    </style>

    <style name="GroupedButton" parent="Widget.AppCompat.Button.Borderless" />

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">?attr/colorControlHighlight</item>
        <item name="android:backgroundTintMode">src_atop</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="IconButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">44dp</item>
    </style>
</resources>
