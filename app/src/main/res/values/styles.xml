<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/colorBackgroundLighter</item>
    </style>

    <style name="TextAppearanceMonospace" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="MaterialButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">?attr/colorControlHighlight</item>
        <item name="android:backgroundTintMode">src_atop</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="MaterialButtonBridge" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/no_inset_button</item>
    </style>
</resources>
