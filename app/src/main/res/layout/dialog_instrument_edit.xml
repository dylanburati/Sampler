<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margin3"
    android:paddingBottom="@dimen/margin2"
    android:paddingLeft="@dimen/margin3"
    android:paddingRight="@dimen/margin3">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin2"
        android:layout_marginLeft="@dimen/margin1"
        android:text="@string/dialog_instrument_edit_title"
        android:textSize="@dimen/title"
        app:fontFamily="sans-serif-medium"
        android:layout_marginStart="@dimen/margin1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/margin2"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/name_hint" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_instrument"
            android:backgroundTint="@color/design_default_color_error"
            android:text="@string/delete" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_sample_paths"
            android:layout_width= "0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/margin2"
            android:ems="10"
            android:inputType="textUri"
            android:hint="@string/path_to_samples_hint" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit_sample_paths"
            android:text="@string/sample_add_button" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/sample_data"
        android:layout_weight="1"
        android:scrollbars="vertical"
        app:layoutManager="libre.sampler.views.ListLayoutManager">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>