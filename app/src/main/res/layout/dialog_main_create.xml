<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margin3"
    android:paddingBottom="@dimen/margin2"
    android:paddingLeft="@dimen/margin3"
    android:paddingRight="@dimen/margin3">

    <TextView
        android:id="@+id/dialog_create_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin2"
        android:layout_marginLeft="@dimen/margin1"
        android:text="@string/dialog_create_title"
        android:textSize="@dimen/title"
        app:fontFamily="sans-serif-medium"
        android:layout_marginStart="@dimen/margin1" />

    <EditText
        android:id="@+id/dialog_create_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/dialog_create_name_hint" />


</LinearLayout>