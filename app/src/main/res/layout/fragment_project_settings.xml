<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin3"
    android:paddingLeft="@dimen/margin3"
    android:paddingRight="@dimen/margin3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_default_sample_path"
        android:text="@string/default_sample_path" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pref_default_sample_path"
        android:ems="10"
        android:inputType="textUri"
        android:layout_below="@id/label_default_sample_path"
        android:layout_alignLeft="@id/label_default_sample_path"
        android:imeOptions="actionDone"
        android:hint="" />
</RelativeLayout>