<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pattern_edit_nav"
    android:layout_width="40dp"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/nav_border"
            android:layout_width="@dimen/nav_border_width"
            android:layout_height="0dp"
            android:background="@color/colorBorderOnBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/nav_indicator"
            android:layout_width="@dimen/nav_indicator_width"
            android:layout_height="0dp"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/open_pattern_edit_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:tint="@color/selectable_icon"
            android:contentDescription="@string/pattern_editor_home"
            android:layout_marginTop="@dimen/margin1"
            android:padding="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/open_note_properties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_properties"
            android:tint="@color/selectable_icon"
            android:contentDescription="@string/pattern_editor_note_properties"
            android:padding="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/open_pattern_edit_base" />

        <ImageView
            android:id="@+id/open_copy_multiple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_content_copy"
            android:tint="@color/selectable_icon"
            android:contentDescription="@string/pattern_editor_copy"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingStart="7dp"
            android:paddingEnd="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/open_note_properties" />

        <ImageView
            android:id="@+id/open_snap_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_magnet"
            android:tint="@color/selectable_icon"
            android:contentDescription="@string/pattern_editor_snap_length"
            android:paddingTop="7dp"
            android:paddingBottom="6dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/open_copy_multiple" />

        <ImageView
            android:id="@+id/open_pattern_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dimension"
            android:tint="@color/selectable_icon"
            android:contentDescription="@string/pattern_editor_pattern_length"
            android:padding="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/open_snap_length" />

        <ImageView
            android:id="@+id/open_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_forward"
            android:tint="@color/selectable_icon"
            android:contentDescription="@string/pattern_editor_export"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingStart="7dp"
            android:paddingEnd="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/open_pattern_length" />

        <ImageView
            android:id="@+id/open_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_help_outline"
            android:tint="@color/selectable_icon"
            android:contentDescription="@string/pattern_editor_help"
            android:padding="6dp"
            android:paddingBottom="6dp"
            android:paddingStart="7dp"
            android:paddingEnd="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/open_export" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
