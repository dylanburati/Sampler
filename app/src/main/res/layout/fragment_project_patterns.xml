<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin3"
    android:paddingLeft="@dimen/margin3"
    android:paddingRight="@dimen/margin3">

    <Switch
        android:id="@+id/pattern_enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchPadding="@dimen/margin2"
        android:text="Pattern 1" />

    <Button
        android:id="@+id/pattern_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pattern_enable"
        android:text="@string/pause"
        android:drawableRight="@drawable/ic_pause" />
</RelativeLayout>