<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#27FFFFFF"
                android:orientation="vertical"
                android:scrollbars="none">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/piano_roll_colheight"
                    android:layout_marginLeft="@dimen/margin1"
                    android:layout_marginRight="@dimen/margin1"
                    android:gravity="bottom"
                    android:text="C8"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/piano_roll_colheight"
                    android:layout_marginLeft="@dimen/margin1"
                    android:layout_marginRight="@dimen/margin1"
                    android:gravity="bottom"
                    android:text="C7"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/piano_roll_colheight"
                    android:layout_marginLeft="@dimen/margin1"
                    android:layout_marginRight="@dimen/margin1"
                    android:gravity="bottom"
                    android:text="C6"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/piano_roll_colheight"
                    android:layout_marginLeft="@dimen/margin1"
                    android:layout_marginRight="@dimen/margin1"
                    android:gravity="bottom"
                    android:text="C5"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/piano_roll_colheight"
                    android:layout_marginLeft="@dimen/margin1"
                    android:layout_marginRight="@dimen/margin1"
                    android:gravity="bottom"
                    android:text="C4"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/piano_roll_colheight"
                    android:layout_marginLeft="@dimen/margin1"
                    android:layout_marginRight="@dimen/margin1"
                    android:gravity="bottom"
                    android:text="C3"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/piano_roll_colheight"
                    android:layout_marginLeft="@dimen/margin1"
                    android:layout_marginRight="@dimen/margin1"
                    android:gravity="bottom"
                    android:text="C2"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/piano_roll_colheight"
                    android:layout_marginLeft="@dimen/margin1"
                    android:layout_marginRight="@dimen/margin1"
                    android:gravity="bottom"
                    android:text="C1"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/piano_roll_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="horizontal">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin3"
            android:paddingTop="@dimen/margin3"
            android:paddingRight="@dimen/margin3">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/expanded_sample_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:flexWrap="wrap">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin2">

                    <TextView
                        android:id="@+id/piano_roll_settings_instrumentlabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_instrument" />

                    <Spinner
                        android:id="@+id/piano_roll_settings_instrument"
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_below="@id/piano_roll_settings_instrumentlabel"
                        android:dividerPadding="0dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin2">

                    <TextView
                        android:id="@+id/piano_roll_settings_lengthlabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_length_label" />

                    <NumberPicker
                        android:id="@+id/piano_roll_settings_length0"
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_below="@id/piano_roll_settings_lengthlabel"
                        android:dividerPadding="0dp"
                        android:layout_marginBottom="0dp" />

                    <NumberPicker
                        android:id="@+id/piano_roll_settings_length1"
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_toRightOf="@id/piano_roll_settings_length0"
                        android:layout_alignTop="@id/piano_roll_settings_length0"
                        android:dividerPadding="0dp" />

                    <NumberPicker
                        android:id="@+id/piano_roll_settings_length2"
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_toRightOf="@id/piano_roll_settings_length1"
                        android:layout_alignTop="@id/piano_roll_settings_length0"
                        android:dividerPadding="0dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin2">

                    <TextView
                        android:id="@+id/piano_roll_settings_snaplengthlabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/snap_length_label" />

                    <Spinner
                        android:id="@+id/piano_roll_settings_snaplength0"
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_below="@id/piano_roll_settings_snaplengthlabel"
                        android:dividerPadding="0dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin2">

                    <TextView
                        android:id="@+id/piano_roll_settings_patternlengthlabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pattern_length_label" />

                    <NumberPicker
                        android:id="@+id/piano_roll_settings_patternlength0"
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_below="@id/piano_roll_settings_patternlengthlabel"
                        android:dividerPadding="0dp" />

                    <NumberPicker
                        android:id="@+id/piano_roll_settings_patternlength1"
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_toRightOf="@id/piano_roll_settings_patternlength0"
                        android:layout_alignTop="@id/piano_roll_settings_patternlength0"
                        android:dividerPadding="0dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/submit_patternlength"
                        android:layout_toRightOf="@id/piano_roll_settings_patternlength1"
                        android:layout_alignBottom="@id/piano_roll_settings_patternlength0"
                        android:layout_marginLeft="@dimen/margin3"
                        android:text="@string/change" />
                </RelativeLayout>
            </com.google.android.flexbox.FlexboxLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pattern_control_height"
        android:layout_weight="0"
        android:background="@drawable/border_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pattern_play"
            android:layout_width="@dimen/pattern_control_height"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin2_dense"
            android:paddingRight="@dimen/margin2_dense"
            android:src="@drawable/ic_play" />

        <ImageView
            android:id="@+id/pattern_stop"
            android:layout_width="@dimen/pattern_control_height"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin2_dense"
            android:paddingRight="@dimen/margin2_dense"
            android:src="@drawable/respond_to_click_ic_stop" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:labelFor="@+id/pattern_tempo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="@dimen/margin2"
            android:layout_marginRight="@dimen/margin1"
            android:textSize="@dimen/caption"
            android:fontFamily="sans-serif-medium"
            android:text="@string/tempo_label" />

        <EditText
            android:id="@+id/pattern_tempo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin2"
            android:padding="0dp"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:inputType="numberDecimal"
            android:imeOptions="actionDone"
            android:textSize="@dimen/title"
            android:minEms="3" />
    </LinearLayout>
</LinearLayout>